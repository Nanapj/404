<div class="bg-light lter b-b wrapper-md">
    <h1 class="m-n font-thin h3">Create Product Type</h1>
</div>
<div class="wrapper-sm" ng-controller="ProductTypeCtrl as vm">
    <div class="row" style="padding-left: 15px;">
        <button class="btn m-b-xs w-xs btn-danger" ng-click="vm.productTypeBack()"><i class="glyphicon glyphicon-chevron-left icon text-light"></i>Back</button>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading font-bold">Create form</div>
                <div class="panel-body">
                    <form role="form">
                        <div class="form-group">
                            <label>Tên loại sản phẩm</label>
                            <input type="text" class="form-control" ng-model="vm.model.Name">
                        </div>
                        <div class="form-group">
                            <label>Mã loại sản phẩm</label>
                            <input type="text" class="form-control" ng-model="vm.model.Code">
                        </div>
                        <button type="submit" class="btn btn-sucess" ng-click="vm.createSubmit()">Tạo loại sản phẩm</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
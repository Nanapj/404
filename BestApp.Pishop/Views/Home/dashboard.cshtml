<div class="hbox hbox-auto-xs hbox-auto-sm fadeIn animated" ng-init="
    app.settings.asideFolded = false;
    app.settings.asideDock = false;
  ">
    <!-- main -->
    <div class="col">
        <!-- main header -->
        <div class="bg-light lter b-b wrapper-md" ng-controller="DashboardCtrl as vm">
            <div class="row">
                <div class="col-sm-6 col-xs-12">
                    <h1 class="m-n font-thin h3 text-black">Dashboard</h1>
                    <small class="text-muted">Welcome to 404</small>
                </div>
                <div class="col-sm-6 text-right hidden-xs">
                    <div class="inline m-r text-left">
                        <div class="m-b-xs">200,000 <span class="text-muted">Khách hàng</span></div>
                        <div ng-init="d3_1=[ 1000,2108,1110,1505,1510,2109,1505,2104,2107,1509,2105,2100,1505,2102,2101,1199,1098 ]"
                             ui-jq="sparkline"
                             ui-options="{{d3_1}}, {type:'bar', height:20, barWidth:5, barSpacing:1, barColor:'#dce5ec'}"
                             class="sparkline inline">
                            loading...
                        </div>
                    </div>
                    <div class="inline text-left">
                        <div class="m-b-xs">150,000 <span class="text-muted">Phiếu chăm sóc</span></div>
                        <div ng-init="d3_2=[ 105,102,106,107,105,104,101,99,98,109,105,100,108,110,105,110,109 ]"
                             ui-jq="sparkline"
                             ui-options="{{d3_2}}, {type:'bar', height:20, barWidth:5, barSpacing:1, barColor:'#dce5ec'}"
                             class="sparkline inline">
                            loading...
                        </div>
                    </div>
                </div>
            </div>

            <div class="wrapper-sm">
                @*<div kendo-scheduler k-options="schedulerOptions">
                <span k-event-template class='custom-event'>{{dataItem.title}}</span>
                <div k-all-day-event-template class='custom-all-day-event'>{{dataItem.title}}</div>
            </div>*@
                <div class="row">
                    <div class="panel panel-default" block-ui="BlockUI">
                        <div class="panel-heading font-bold">List Events</div>
                        <div class="panel-body">
                            <div class="form-group" style="overflow-x:auto">
                                <table class="table">
                                    <thead style="background:#9baeb3;color:black">

                                        <tr>
                                            <th scope="col">Mã sự kiện</th>
                                            <th scope="col">Ngày tạo</th>
                                            <th scope="col">SĐT</th>
                                            <th scope="col">Tên KH</th>
                                            <th scope="col">Địa chỉ</th>
                                            <th scope="col">Loại</th>
                                            <th scope="col">Mục đích</th>
                                            <th scope="col">Ghi chú</th>
                                            <th scope="col">Trạng thái</th>
                                            <th scope="col"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="x in vm.EventForPishop">
                                            <td>
                                                {{x.Code}}
                                            </td>
                                            <td>{{x.CreatDate | date:'M/d/yyyy HH:mm:ss'}}</td>
                                            <td>
                                                {{x.PhoneNumber}}
                                            </td>
                                            <td>{{x.CustomerName}}</td>
                                            <td>{{x.Address}}</td>
                                            <td>{{x.EventTypeName}}</td>
                                            <td>{{x.EventPurposeName}}</td>
                                            <td>{{x.Note}}</td>
                                            <td>Đã xem  </td>
                                            <th><button ng-click="vm.Seen(x.ID)" title="Xem chi tiết"><i class="fa fa-reply" aria-hidden="true"></i></button></th>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>

                <div class="row">
                    <canvas id="canvasChart" width="400" height="50"></canvas>
                </div>
                <div class="row">
                    <canvas id="pieChart" width="400" height="50"></canvas>
                </div>
                <div class="row">
                    <canvas id="columnAndLineChart" width="400" height="50"></canvas>
                </div>
                <div class="row">
                    <canvas id="barChart" width="400" height="50"></canvas>
                </div>
            </div>

            <!--View event detail-->
            <div kendo-window="win2" id="windowDetail"
                 k-options="windowOptions"
                 k-on-open="win2visible = true"
                 k-on-close="win2visible = false">
                <div class="row col-md-12">
                    <div class="col-md-12">
                        <div class="panel panel-default" block-ui="BlockUI">
                            <div class="panel-heading font-bold">List Events</div>

                        </div>
                    </div>
                </div>
            </div>

        </div>
        <!-- / main header -->
    </div>
    <!-- / main -->
</div>



<style>
    tr:nth-child(even) {
        background-color: #f2f2f2;
    }
</style>
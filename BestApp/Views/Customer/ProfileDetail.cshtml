
<div class="col">
    <div class="bg-light lter b-b wrapper-md">
        <h1 class="m-n font-thin h3">Customer Profile</h1>
    </div>
    <div class="bg-light lter b-b wrapper-md" ng-controller="cusProfileCtrl as vm">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading font-bold">Thông tin khách hàng</div>
                <div class="panel-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Text:</label>
                            <div class="col-sm-9">
                                <p class="form-control-static">
                                    <a editable-text="user.name">{{ vm.customer.Name || 'empty' }}</a>
                                </p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Select:</label>
                            <div class="col-sm-9">
                                <p class="form-control-static">
                                    <a editable-select="user.status" e-ng-options="s.value as s.text for s in statuses">
                                        {{ showStatus(user) }}
                                    </a>
                                </p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Textarea:</label>
                            <div class="col-sm-9">
                                <p class="form-control-static">
                                    <a editable-textarea="user.desc" e-rows="7">
                                        {{ user.desc || 'no description' }}
                                    </a>
                                </p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Checkbox:</label>
                            <div class="col-sm-9">
                                <p class="form-control-static">
                                    <a editable-checkbox="user.remember" e-title="Remember?">
                                        {{ user.remember && "Remember me!" || "Don't remember" }}
                                    </a>
                                </p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Radiolist:</label>
                            <div class="col-sm-9">
                                <p class="form-control-static">
                                    <a editable-radiolist="user.agenda" e-ng-options="s.value as s.text for s in agenda">
                                        {{ showAgenda() }}
                                    </a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

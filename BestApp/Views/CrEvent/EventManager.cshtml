
<div class="col">
    <div class="bg-light lter b-b wrapper-md" ng-controller="crEventManagerCtrl as vm">
        <h4>Quản lý sự kiện</h4>
        <div class="row">
            <div class="col-sm-12">
                <div class="panel panel-default">
                    <div class="panel-heading font-bold">Filter</div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group" style="padding-left: 15px;">
                                    <h5>Ngày tạo</h5>
                                    <div kendo-date-range-picker
                                         k-ng-model="vm.startDate, vm.endDate"
                                         k-on-change="onDateRangeChange()"
                                         k-options="{format: 'dd/MM/yyyy'}"
                                         style="width: 100%;" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group" style="padding-left: 15px;">
                                    <h5>Phòng ban</h5>
                                    <select kendo-multi-select
                                            k-options="vm.departmentSelectOptions"
                                            k-ng-model="vm.departmentSelectedIds"></select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <h5>Danh sách tags</h5>
                                    <div id="listoftag" title="listoftag" >
                                         <button 
                                                 ng-repeat="item in vm.tagsList" 
                                                 class="btn m-b-xs w-xs btn-default" 
                                                 ng-click="tagItemClicked(item)" >{{item.Name}}</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

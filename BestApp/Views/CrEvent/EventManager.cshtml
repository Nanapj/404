<head>
    <style>
        .red {
            background-color: red;
        }

        .none {
            background-color: none;
        }
        button.active {
            background-color:red;
        }
    </style>
</head>
<div class="col">
    <div class="bg-light lter b-b wrapper-md" ng-controller="crEventManagerCtrl as vm">
        <h4>Quản lý sự kiện</h4>
        <div class="row">
            <div class="col-sm-12">
                <div class="panel panel-default">
                    <div class="panel-heading font-bold">Filter</div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group" style="padding-left: 15px;">
                                    <h5>Ngày tạo</h5>
                                    <div kendo-date-range-picker
                                         k-ng-model="vm.startDate, vm.endDate"
                                         k-on-change="onDateRangeChange()"
                                         k-options="{format: 'dd/MM/yyyy'}"
                                         style="width: 100%;" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group" style="padding-left: 15px;">
                                    <h5>Phòng ban</h5>
                                    <select kendo-multi-select
                                            k-options="vm.departmentSelectOptions"
                                            k-ng-model="vm.departmentSelectedIds"></select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <h5>Danh sách tag sự kiện</h5>
                                    <div id="listoftag" title="listoftag" >
                                         <button 
                                            id="button{{item.Id}}"
                                            ng-repeat="item in vm.tagsList" 
                                            class="btn m-b-xs w-xs btn-default" 
                                            ng-click="tagItemClicked(item,this,$index)" >{{item.Name}}</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div id="staffgrid"
                     kendo-grid
                     k-options="mainGridOptions"
                     k-selectable="true"
                     k-filterable='{ extra: false, messages: { info: "Filter by: " }, operators: { string: { contains: "Contains", startswith: "Starts with" } } }'></div>
            </div>
            <div id="details">
                <div id="gridDetails"></div>
            </div>

            <script type="text/x-kendo-template" id="template">
                <div id="details-container">
                    <h2>#= FullName # #= FullName #</h2>
                    <em>#= Phone #</em>
                    <dl>
                        <dt>Email: #= Email #</dt>
                        <dt>Address: #= Address #</dt>
                    </dl>
                </div>
            </script>
            <div id="editdetails">
                <div id="gridEditDetails"></div>
            </div>
        </div>
    </div>
 </div>
